rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow checking of allowed list (Legacy users need 'list' permission for query fallback)
    match /users/{email} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
