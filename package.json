{
  "name": "inventory-management-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Professional Inventory Management Application",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite preview",
    "dev:desktop": "concurrently -k \"cross-env VITE_DEV_SERVER_URL=http://localhost:4173 vite --strictPort --port 4173\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:4173 node scripts/start-electron.cjs\"",
    "build:desktop": "vite build && electron-packager . inventory-management-app --out=release --overwrite --platform=all --arch=x64 --prune=true",
    "dist:win": "vite build && electron-builder --win nsis",
    "dist:portable": "vite build && electron-builder --win portable"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "d3-geo": "^3.1.1",
    "d3-scale": "^4.0.2",
    "d3-tooltip": "^0.0.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "dotenv": "^16.4.5",
    "firebase": "^12.9.0",
    "i18next": "^25.8.7",
    "i18next-browser-languagedetector": "^8.2.1",
    "lucide-react": "^0.378.0",
    "react": "^18.2.0",
    "react-day-picker": "^9.13.2",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.4",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.23.0",
    "react-simple-maps": "^3.0.0",
    "react-to-print": "^3.2.0",
    "react-window": "^1.8.11",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.2",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0"
  },
  "build": {
    "appId": "com.gemtoys.inventory",
    "productName": "Inventory Management",
    "buildResources": "build",
    "directories": {
      "output": "release-builder"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!src/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "win": {
      "signAndEditExecutable": false,
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
